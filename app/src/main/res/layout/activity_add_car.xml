<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.addCar.AddCarActivity">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_passer_header"
        android:elevation="20dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="15dp">

        <ImageButton
            android:id="@+id/imgbtn_backToMainActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="5dp"
            android:src="@drawable/ic_passer_header_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="Thêm xe"
            android:textAlignment="center"
            android:textColor="@color/mainColor"
            android:textSize="25sp" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/img_updateProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_addCar"
        android:layout_below="@+id/header"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_addcar" />

    <LinearLayout
        android:id="@+id/layout_addCar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_passer_body"
        android:elevation="40dp"
        android:orientation="vertical"
        android:paddingHorizontal="30dp"
        android:paddingVertical="20dp">

        <EditText
            android:id="@+id/edt_nameCar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:background="@drawable/bg_passer_body_textbox"
            android:drawableStart="@drawable/custom_ic_passer_body_cartype"
            android:drawablePadding="10dp"
            android:hint="Tên xe"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/black" />


        <EditText
            android:id="@+id/edt_identityCar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:background="@drawable/bg_passer_body_textbox"
            android:drawableStart="@drawable/custom_ic_addcar"
            android:drawablePadding="10dp"
            android:hint="Biển số xe"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/black" />

        <Spinner
            android:id="@+id/spinner_carType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:background="@drawable/bg_passer_body_textbox"
            android:textAlignment="center" />


        <Button
            android:id="@+id/btn_continueAddCar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:background="@drawable/bg_passer_body_btn"
            android:fontFamily="@font/roboto_bold"
            android:text="Tiếp tục"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </LinearLayout>

</RelativeLayout>