<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.customer.passer.register_parkingLot.register_parkinglot">

    <RelativeLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_passer_header"
        android:elevation="20dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="15dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="5dp"
            android:src="@drawable/ic_passer_header_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/roboto_bold"
            android:text="ĐĂNG KÝ Ô ĐỖ"
            android:textColor="@color/mainColor"
            android:textSize="19sp" />
    </RelativeLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_choose"
        android:layout_below="@+id/layout_top"
        android:src="@drawable/ic_img_registerparkinglot" />

    <LinearLayout
        android:id="@+id/layout_choose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="15dp"
        android:background="@drawable/bg_passer_body"
        android:elevation="20dp"
        android:orientation="vertical"
        android:paddingHorizontal="30dp"
        android:paddingVertical="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="Chọn ngày đỗ"
            android:textColor="@color/mainColor"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edt_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:background="@drawable/bg_passer_body_textbox"
            android:focusable="false"
            android:fontFamily="@font/roboto_bold"
            android:padding="10dp"
            android:text="Ngày"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="Thời gian bắt đầu đỗ: "
            android:textColor="@color/mainColor"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edt_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:background="@drawable/bg_passer_body_textbox"
            android:focusable="false"
            android:fontFamily="@font/roboto_bold"
            android:padding="10dp"
            android:text="Thời gian"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="Số giờ đỗ: "
            android:textColor="@color/mainColor"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:gravity="center">

            <ImageButton
                android:id="@+id/imgBtn_muiltiArrowUp_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/bg_passer_body_btn"
                android:padding="5dp"
                android:rotation="180"
                android:src="@drawable/ic_register_body_multiarrow"
                app:tint="@color/white" />

            <ImageButton
                android:id="@+id/imgBtn_arrowDownBack_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/bg_passer_body_btn"
                android:padding="5dp"
                android:src="@drawable/ic_passer_arrowback" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:fontFamily="@font/roboto_bold"
                android:text="1"
                android:textAlignment="center"
                android:textColor="@color/mainColor"
                android:textSize="25sp" />

            <ImageButton
                android:id="@+id/imgBtn_arrowUp_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/bg_passer_body_btn"
                android:padding="5dp"
                android:rotation="180"
                android:src="@drawable/ic_passer_arrowback" />

            <ImageButton
                android:id="@+id/imgBtn_muiltiArrowUp_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/bg_passer_body_btn"
                android:padding="5dp"
                android:src="@drawable/ic_register_body_multiarrow"
                app:tint="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Tổng hóa đơn : "
                android:textColor="@color/mainColor"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/testView"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:background="@drawable/bg_passer_body_btn"
            android:fontFamily="@font/roboto_bold"
            android:text="TIẾP TỤC"
            android:textColor="@color/white" />
    </LinearLayout>

</RelativeLayout>